# ==============================================================================
# SUPABASE CONFIGURATION
# ==============================================================================
# URL do projeto Supabase (encontre em Settings > API)
NEXT_PUBLIC_SUPABASE_URL=https://seu-projeto.supabase.co

# Chave pública do Supabase (anon/public key - encontre em Settings > API)
NEXT_PUBLIC_SUPABASE_ANON_KEY=sua-anon-key-aqui

# Connection string do Postgres (encontre em Settings > Database > Connection string)
# Formato: postgresql://postgres:[PASSWORD]@[HOST]:5432/postgres
DATABASE_URL=postgresql://postgres:sua-senha@db.seu-projeto.supabase.co:5432/postgres

# ==============================================================================
# LOCAL DATABASE CONFIGURATION
# ==============================================================================
# Caminho para o arquivo SQLite local (relativo à raiz do projeto)
LOCAL_DB_PATH=./data/local.db

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
# Ambiente (development, production, test)
NODE_ENV=development

# URL base da aplicação
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==============================================================================
# SYNC CONFIGURATION
# ==============================================================================
# Intervalo de sincronização em milissegundos (padrão: 30 segundos)
SYNC_INTERVAL_MS=30000

# Número máximo de tentativas de sincronização
SYNC_MAX_RETRIES=3

# Timeout para requisições de sincronização em milissegundos
SYNC_TIMEOUT_MS=30000
